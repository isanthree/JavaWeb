<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>download</servlet-name>
    <servlet-class>org.example.servlet.FileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>download</servlet-name>
    <url-pattern>/dl</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>image</servlet-name>
    <servlet-class>org.example.servlet.ImageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>image</servlet-name>
    <url-pattern>/image</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>redirection</servlet-name>
    <servlet-class>org.example.servlet.RedirectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>redirection</servlet-name>
    <url-pattern>/redirection</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>request</servlet-name>
    <servlet-class>org.example.servlet.RequestTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>request</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

</web-app>
